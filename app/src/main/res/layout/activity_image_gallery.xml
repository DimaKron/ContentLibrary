<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.kphu.itis.contentlibrary.widgets.SquareImageView
        android:background="@color/colorGray_ababab"
        android:id="@+id/image_view_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_gallery"
        android:layout_below="@id/image_view_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>